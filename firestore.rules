rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection: нэвтэрсэн хэрэглэгч бүр read/write хийх боломжтой
    match /users/{userId} {
      allow read, write: if request.auth != null;
    }
    
    // Journey data: бүх хэрэглэгч read хийх боломжтой, нэвтэрсэн хэрэглэгч write хийх боломжтой
    match /journeyData/{document=**} {
      allow read: if true; // Бүх хэрэглэгч read хийх боломжтой
      allow write: if request.auth != null; // Зөвхөн нэвтэрсэн хэрэглэгч write хийх боломжтой
    }
  }
}
